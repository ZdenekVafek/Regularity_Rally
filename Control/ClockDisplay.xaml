<UserControl x:Class="Regularity_Rally.Control.ClockDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Regularity_Rally.Control"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="145">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DateData" FontFamily="/Regularity_Rally;component/Resources/#Noto Sans Med" Foreground="White" FontSize="14" TextAlignment="Right" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="TimeData" Grid.Column="1" FontFamily="/Regularity_Rally;component/Resources/#Noto Sans Med" Foreground="White" FontSize="14" TextAlignment="Right" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="TimeSecData" Grid.Column="2" FontFamily="/Regularity_Rally;component/Resources/#Noto Sans Med" FontSize="14" FontWeight="Bold" Foreground="White" TextAlignment="Left" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>